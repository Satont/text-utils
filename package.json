{
  "name": "@satont/text-utils",
  "version": "1.0.4",
  "description": "Analyze text and other helpers",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "dev": "nodemon",
    "build": "rimraf lib; tsc",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test",
    "coverage:upload": "codecov",
    "docs": "typedoc; touch docs/.nojekyll",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "preversion": "npm test && npm run docs",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "text",
    "utils",
    "analyze",
    "helpers"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Satont/text-utils.git"
  },
  "bugs": {
    "url": "https://github.com/Satont/text-utils"
  },
  "author": "Satont <satontworldwide@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "tlds": "^1.211.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.13",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.8",
    "chai": "^4.2.0",
    "codecov": "^3.8.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  }
}
